# App
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
JWT_SECRET=change-me

# App DB connection (inside docker compose network)
DATABASE_URL=postgres://neon:npg@neon-local:5432/neondb
# Required when using @neondatabase/serverless against Neon Local
NEON_FETCH_ENDPOINT=http://neon-local:5432/sql

# Neon Local (creates ephemeral branches in your Neon Cloud project)
NEON_API_KEY=your_neon_api_key
NEON_PROJECT_ID=your_neon_project_id
# Optional: parent branch (defaults to your project's main branch)
# PARENT_BRANCH_ID=br-xxxxxxxx
